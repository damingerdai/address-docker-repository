{
    "rulesDirectory": [
        "tools/tslint/rules"
    ],
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [140]
        },
        "import-blacklist": [
            true,
            {"lodash": ["pull", "pullAll"]}
        ],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
        "indent": [true, "tabs", 2],
        "semicolon": [true,"always"],
        "no-chinese-character": [true]
    }
}